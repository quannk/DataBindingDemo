<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="LayoutFooterInteractiveLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:background">@drawable/bg_all_ripple_click</item>
    </style>
    <style name="ImageFooterInteractive">
        <item name="android:layout_width">@dimen/size_20</item>
        <item name="android:layout_height">@dimen/size_20</item>
        <item name="android:padding">@dimen/size_2</item>
    </style>
    <style name="TextFooterInteractive">
        <item name="android:fontFamily">@font/san_francisco_display_medium</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_4</item>
    </style>

    <style name="LayoutFooterInteractive">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:background">@drawable/bg_all_ripple_click</item>
    </style>

    <style name="LayoutFooterInteractiveRight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:background">@drawable/bg_all_ripple_click</item>
    </style>

</resources>
